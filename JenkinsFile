pipeline {
    agent any
    tools {
        nodejs 'node' // Replace with the name you configured in Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from GitHub
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Install dependencies and build React.js project
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Deploy to Apache') {
            steps {
                script {
                    def remoteServer = [:]
                    remoteServer.name = 'ecommerceProject'
                    remoteServer.host = '52.66.226.96'
                    remoteServer.user = 'ubuntu'
                    //remoteServer.password = 'your-ssh-password'

                    sshPut remote: remoteServer, from: 'build/', into: '/var/www/html/ecommerce'
                    sshScript remote: remoteServer, script: 'sudo systemctl restart apache2'
                }
            }
        }
        // stage('Run') {
        //     steps {
        //         script {
        //             // Start the React development server (or any other run command)
        //             sh 'npm start'
        //         }
        //     }
        // }
    }
}
