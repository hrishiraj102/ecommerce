pipeline {
    agent any
    tools {
        nodejs 'node' // Replace with the name you configured in Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from GitHub
                checkout scm
            }
        }
        stage('Build') {
            steps {
                // Install dependencies and build React.js project
                sh 'npm install'
                sh 'npm run build'
            }
        }
        
        stage('Deploy to Apache') {
            steps {
                script {
                    sh 'cp -r build/* /var/www/html'  // Copy build artifacts to web server directory
                      
                }
            }
        }

        stage('Run') {
            steps {
                script {
                    // Start the React development server (or any other run command)
                    sh 'npm start'
                }
            }
        }
        
    }
}
